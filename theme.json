{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                { "slug": "ux-beige", "color": "#DAD7CD", "name": "Beige" },
                { "slug": "ux-light-green", "color": "#A3B18A", "name": "Ljusblå" },
                { "slug": "ux-green", "color": "#588157", "name": "Grön" },
                { "slug": "ux-darkgreen", "color": "#3A5A40", "name": "Mörkgrön" },
                { "slug": "ux-dark-gray", "color": "#434343", "name": "Mörkgrå" },
                { "slug": "ux-primary", "color": "#988AB1", "name": "Primär" },
                { "slug": "ux-secondary", "color": "#5A3A54", "name": "Sekundär" }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Space Grotesk",
                    "slug": "space-grotesk",
                    "name": "Space Grotesk",
                    "fontFace": [
                        {
                            "fontFamily": "Space Grotesk",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/space-grotesk/SpaceGrotesk-Light.ttf"]
                        },
                        {
                            "fontFamily": "Space Grotesk",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/space-grotesk/SpaceGrotesk-Medium.ttf"]
                        },
                        {
                            "fontFamily": "Space Grotesk",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/space-grotesk/SpaceGrotesk-Bold.ttf"]
                        }

                    ]
                },
                {
                    "fontFamily": "Inter",
                    "slug": "inter",
                    "name": "Inter",
                    "fontFace": [
                        {
                            "fontFamily": "Inter",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/inter/inter-400.ttf"]
                        }
                    ]
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1440px"
        },
        "custom": {
            "typography": {
                "fontSize": {
                    "heading-1": "clamp(2rem, 1.1197rem + 3.7559vw, 4.5rem)",
                    "heading-2": "clamp(1.625rem, 0.9648rem + 2.8169vw, 3.5rem)",
                    "heading-3": "clamp(1.375rem, 0.9349rem + 1.8779vw, 2.625rem)",
                    "heading-4": "clamp(1.125rem, 0.8169rem + 1.3146vw, 2rem)",
                    "heading-5": "clamp(1.125rem, 1.037rem + 0.3756vw, 1.375rem)",
                    "heading-6": "clamp(1rem, 0.956rem + 0.1878vw, 1.125rem);"
                }
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
            "lineHeight": "1.75",
            "fontSize": "1rem",
            "fontWeight": "300"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "normal",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-1)",
                    "fontWeight": "700"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "normal",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-2)",
                    "fontWeight": "700"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "normal",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-3)",
                    "fontWeight": "700"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "normal",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-4)",
                    "fontWeight": "700"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "normal",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-5)",
                    "fontWeight": "300"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "1.75",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-6)",
                    "fontWeight": "300"
                }
            },
            "button": {
                "typography": {
                    "fontWeight": "500"
                }
            },
            "link": {
                "typography": {
                    "fontWeight": "500",
                    "textDecoration": "underline"
                },
                "color": {
                    "text": "var(--wp--preset--color--ux-darkgreen)"
                }
            }
        }
    }
}