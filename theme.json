{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "palette": [
                { "slug": "grass", "color": "#343B29", "name": "Gräs" },
                { "slug": "red", "color": "#FE0000", "name": "Röd" },
                { "slug": "darkred", "color": "#721422", "name": "Mörkröd" }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Overpass",
                    "slug": "overpass",
                    "name": "Overpass",
                    "fontFace": [
                        {
                            "fontFamily": "Overpass",
                            "fontWeight": "400",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/overpass/Overpass-Regular.ttf"]
                        }
                    ]
                },
                {
                    "fontFamily": "Sansita",
                    "slug": "sansita",
                    "name": "sansita",
                    "fontFace": [
                        {
                            "fontFamily": "Sansita Bold",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/sansita/Sansita-Bold.ttf"]
                        },
                        {
                            "fontFamily": "Sansita Extra Bold",
                            "fontWeight": "800",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/sansita/Sansita-ExtraBold.ttf"]
                        }
                    ]
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1440px"
        },
        "custom": {
            "typography": {
                "fontSize": {
                    "heading-1": "clamp(2rem, 1.1197rem + 3.7559vw, 4.5rem)",
                    "heading-2": "clamp(1.625rem, 0.9648rem + 2.8169vw, 3.5rem)",
                    "heading-3": "clamp(1.375rem, 0.9349rem + 1.8779vw, 2.625rem)",
                    "heading-4": "clamp(1.125rem, 0.8169rem + 1.3146vw, 2rem)",
                    "heading-5": "clamp(1.125rem, 1.037rem + 0.3756vw, 1.375rem)",
                    "heading-6": "clamp(1rem, 0.956rem + 0.1878vw, 1.125rem);"
                }
            }
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--overpass)",
            "lineHeight": "1.75",
            "fontSize": "1rem",
            "fontWeight": "300"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--sansita)",
                    "lineHeight": "1.5",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-1)",
                    "fontWeight": "700"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--sansita)",
                    "lineHeight": "1.5",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-2)",
                    "fontWeight": "700"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--sansita)",
                    "lineHeight": "1.5",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-3)",
                    "fontWeight": "700"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--sansita)",
                    "lineHeight": "1.5",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-4)",
                    "fontWeight": "700"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--sansita)",
                    "lineHeight": "1.5",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-5)",
                    "fontWeight": "300"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--sansita)",
                    "lineHeight": "1.5",
                    "fontSize": "var(--wp--custom--typography--font-size--heading-6)",
                    "fontWeight": "300"
                }
            },
            "button": {
                "typography": {
                    "fontWeight": "500"
                }
            },
            "link": {
                "typography": {
                    "fontWeight": "500",
                    "textDecoration": "underline"
                },
                "color": {
                    "text": "var(--wp--preset--color--ux-darkgreen)"
                }
            }
        }
    }
}