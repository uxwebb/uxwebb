{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": false,
        "color": {
            "palette": [
                { "slug": "ux-darkblue", "color": "#1D2F6F", "name": "Mörkblå" },
                { "slug": "ux-blue", "color": "#8390FA", "name": "Ljusblå" },
                { "slug": "ux-yellow", "color": "#FAC748", "name": "Gul" },
                { "slug": "ux-lightpink", "color": "#F9E9EC", "name": "Ljusrosa" },
                { "slug": "ux-pink", "color": "#F88DAD", "name": "Rosa" }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Space Grotesk",
                    "slug": "space-grotesk",
                    "name": "Space Grotesk",
                    "fontFace": [
                        {
                            "fontFamily": "Space Grotesk",
                            "fontWeight": "300",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/space-grotesk/SpaceGrotesk-Light.ttf"]
                        },
                        {
                            "fontFamily": "Space Grotesk",
                            "fontWeight": "500",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/space-grotesk/SpaceGrotesk-Medium.ttf"]
                        },
                        {
                            "fontFamily": "Space Grotesk",
                            "fontWeight": "700",
                            "fontStyle": "normal",
                            "fontStretch": "normal",
                            "src": ["file:./assets/fonts/space-grotesk/SpaceGrotesk-Bold.ttf"]
                        }

                    ]
                }
            ]
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1440px"
        }
    },
    "styles": {
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
            "lineHeight": "1.75",
            "fontSize": "1rem",
            "fontWeight": "300"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "1.75",
                    "fontSize": "3rem",
                    "fontWeight": "700"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "1.75",
                    "fontSize": "1.8rem",
                    "fontWeight": "700"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "1.75",
                    "fontSize": "1.6rem",
                    "fontWeight": "300"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "1.75",
                    "fontSize": "1.4rem",
                    "fontWeight": "300"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "1.75",
                    "fontSize": "1.2rem",
                    "fontWeight": "300"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--space-grotesk)",
                    "lineHeight": "1.75",
                    "fontSize": "1rem",
                    "fontWeight": "300"
                }
            }
        }
    }
}